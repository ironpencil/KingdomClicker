<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% unless @user.kingdom.nil? %>
      <ul class="kingdoms">
        <%= render partial: 'kingdoms/summary', locals: { summary: @user.kingdom } %>
      </ul>
    <% end %>
  </div>
</div>